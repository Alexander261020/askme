<div class="content-wrapper buffer-both text-center">
  <div class="buffer-both">
    <h1 class="title-medium">Наши пользователи</h1>
  </div>

  <div>
    <% @users.each do |user| %>
      <div class="users-list-item">
        <div class="user-image-div user-image-div-small">
          <%= link_to image_tag(user_avatar(user), class: 'user-image p-20'), user_path(user) %>
        </div>
      </div>
    <% end %>
  </div>

  <% if @tags.present? %>
    <div class="text-left border-top border-dark" >
      Все теги мира <%= @tags.count %>:
      <% @tags.each_with_index do |tag, index| %>
        <%= "|" unless index == 0 %>
        <%= link_to tag[:text], tag_path(tag[:text]) %>
      <% end %>
    </div>
  <% end %>
